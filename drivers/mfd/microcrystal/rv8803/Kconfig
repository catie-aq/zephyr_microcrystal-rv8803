# RV_8803_C7 driver configuration

# Copyright (c) 2024 CATIE
# SPDX-License-Identifier: Apache-2.0

menuconfig MFD_RV8803
    bool "MFD RV-8803 Device"
    default y
    depends on DT_HAS_MICROCRYSTAL_RV8803_ENABLED
    select I2C
    help
      Enable driver for MICRO CRYSTAL RV-8803 smt real-time clock module on i2c-bus

if MFD_RV8803

config MFD_RV8803_DETECT_BATTERY_STATE
    bool "Enable RTC battery flags"
    default y
    depends on RTC_RV8803
    help
      Enable flags on battery state of charge

config MFD_RV8803_WORKQUEUE
    bool "Custom RV-8803 work queue"
    default y
    help
      Enable RV-8803 work queue handling interrupts for all instances

if MFD_RV8803_WORKQUEUE

config MFD_RV8803_WORKQUEUE_PRIORITY
    int "Stack size for the RV-8803 interrupt work queue"
    default MAIN_THREAD_PRIORITY
    help
      Priority level for the work queue handling interrupts and dispatching callbacks

config MFD_RV8803_WORKQUEUE_SIZE
    int "Priority for the RV-8803 interrupt work queue"
    default 512
    help
      Size of the stack used for the work queue handling interrupts and dispatching callbacks

endif

endif
