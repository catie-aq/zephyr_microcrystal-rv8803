menuconfig CLOCK_RV8803
    bool "RV-8803 peripheral CLOCK"
    default y
    depends on DT_HAS_MICROCRYSTAL_RV8803_CLOCK_ENABLED
    select I2C
    help
      Enable driver for MICRO CRYSTAL RV-8803 smt real-time clock module on i2c-bus
